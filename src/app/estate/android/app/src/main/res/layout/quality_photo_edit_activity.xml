<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_edit_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <com.glodon.bim.business.qualityManage.view.PhotoEditView
        android:id="@+id/photo_edit_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/photo_edit_top_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="20dp"
            android:text="@string/str_cancel"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo_edit_top_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:layout_marginTop="20dp"
            android:text="@string/str_finish"
            android:textColor="#02ff00"
            android:textSize="17dp"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/photo_edit_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@color/transparent"
        android:layout_marginLeft="11dp"
        android:textSize="18dp"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:minHeight="37dp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:id="@+id/photo_edit_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ab000000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/photo_edit_bottom_function"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_edit_bottom_function_draw_line"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/icon_draw_line_white" />

            <ImageView
                android:id="@+id/photo_edit_bottom_function_draw_text"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:background="@mipmap/icon_draw_text" />
        </LinearLayout>

        <View
            android:id="@+id/photo_edit_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#7b7b7b" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/photo_edit_bottom_cancel_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="25dp"
                android:paddingBottom="17dp">

                <LinearLayout
                    android:id="@+id/photo_edit_bottom_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/icon_bottom_cancel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_05"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14"
                        android:text="@string/str_quality_photo_cancel" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photo_edit_bottom_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_64"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/icon_bottom_finish" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_05"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14"
                        android:text="@string/str_quality_photo_use_photo" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/photo_edit_bottom_color_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_30"
                android:paddingTop="@dimen/dimen_30"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_0"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/circle_color_0"
                    />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_1"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_1" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_2"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_2" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_3"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_3" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_4"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_4" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_5"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_5" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_6"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_6" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_7"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_7" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_back"
                    android:layout_width="@dimen/dimen_28"
                    android:layout_height="@dimen/dimen_28"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@mipmap/icon_color_back"
                     />
            </LinearLayout>

            <View
                android:id="@+id/photo_edit_bottom_color_parent_bottomview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0"
                android:layout_below="@id/photo_edit_bottom_color_parent"
                android:background="@color/transparent"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_edit_bottom_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/icon_bottom_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/str_quality_create_delete_text"
            android:layout_marginBottom="@dimen/dimen_19"
            android:layout_marginTop="@dimen/dimen_07"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"
            />
    </LinearLayout>
</RelativeLayout>
